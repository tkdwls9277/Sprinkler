<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sprinkler Solar Cell(nav bar)"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="도시"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/day0date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="날짜"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/day0temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:hint="온도"
                android:paddingRight="20dp"
                android:textColor="#ffffff"
                android:textSize="50dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:background="#3CF1EBF1"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/day0weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="날씨"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="습도 : "
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/day0humi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="defalt"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="바람 : "
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/day0wind"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="defalt"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="#3CF1EBF1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/day1date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="날짜"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/day1weather"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="날씨"
                android:gravity="center"
                android:paddingRight="20dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/day1temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="온도"
                android:gravity="center"
                android:paddingRight="20dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/day1humi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="습도"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/day2date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="날짜"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/day2weather"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="날씨"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/day2temp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="온도"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/day2humi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="습도"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/day3date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="날짜"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/day3weather"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="날씨"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/day3temp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="온도"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/day3humi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="습도"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
</LinearLayout>